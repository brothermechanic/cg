	<longdescription>
		Blender, the open source software for 3D modeling, animation,
		rendering, post-production, interactive creation and playback.
	</longdescription>

	<use>
		<flag name="addons">
			Enable bundled addons and addons_contrib.
		</flag>
		<flag name="alembic">
			Add support for Alembic interchange format through
			<pkg>media-libs/alembic</pkg>.
		</flag>
		<flag name="avi">
			Add support for AVI codec.
		</flag>
		<flag name="boolean">
			Build with boolean modifier.
		</flag>
		<flag name="collada">
			Add support for Collada interchange format through
			<pkg>media-libs/opencollada</pkg>.
		</flag>
		<flag name="cg">
			Recommended CG settings for blender.
		</flag>
		<flag name="opencolorio">
			Enable OpenColorIO color management through
			<pkg>media-libs/opencolorio</pkg>.
		</flag>
		<flag name="cuda">
			Build cycles renderer with nVidia CUDA support.
		</flag>
		<flag name="cycles">
			Build cycles renderer.
		</flag>
		<flag name="dds">
			Adds DDS textures support to Blender.
		</flag>
		<flag name="decimate">
			Build with decimate (polygon reducer) modifier.
		</flag>
		<flag name="doc">
			Build C and Python API documentation directly from the source code.
		</flag>
		<flag name="dpx">
			Build with DPX image format support.
		</flag>
		<flag name="fluid">
			Enable Mantaflow Fluid Simulation Framework
		</flag>
		<flag name="freestyle">
			FreeStyle is an edge- and line-based non-photorealistic rendering engine.
		</flag>
		<flag name="oceansim">
			Build with modifier for ocean simulation.
		</flag>
		<flag name="ndof">
			Enable NDOF input devices (SpaceNavigator and friends).
		</flag>
		<flag name="opencl">
			Opencl acceleration for compositor and Cycles renderer
		</flag>
		<flag name="openimageio">
			Simple but powerful ImageInput and ImageOutput APIs
		</flag>
		<flag name="opensubdiv">
			Add viewport rendering support for subdivision modifier. 
		</flag>
		<flag name="openvdb">
			Library for use in volumetric.
		</flag>
		<flag name="osl">
			Advanced shading language. Works only on CPU.
		</flag>
		<flag name="player">
			Build the Blender Video Player.
		</flag>
		<flag name="portable">
